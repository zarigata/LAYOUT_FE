# Production Environment Variables Configuration

# API Configuration
NEXT_PUBLIC_API_URL=${API_URL}
NEXT_PUBLIC_APP_URL=${APP_URL}

# Authentication
NEXTAUTH_URL=${APP_URL}
NEXTAUTH_SECRET=${NEXTAUTH_SECRET}
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRATION=86400 # 24 hours in seconds

# AI Service Configuration
NEXT_PUBLIC_AI_SERVICE_ENABLED=true
AI_SERVICE_URL=${AI_SERVICE_URL}
AI_SERVICE_API_KEY=${AI_SERVICE_API_KEY}
# For Ollama integration
OLLAMA_API_URL=${OLLAMA_API_URL}
OLLAMA_MODEL=llama3.2

# Database Configuration (for API routes)
DATABASE_URL=${DATABASE_URL}

# Monitoring and Logging
SENTRY_DSN=${SENTRY_DSN}
NEXT_PUBLIC_ANALYTICS_ID=${ANALYTICS_ID}

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_TUTOR=true
NEXT_PUBLIC_ENABLE_AI_CLASS_GENERATOR=true

# Cache Control
NEXT_PUBLIC_CACHE_MAX_AGE=3600 # 1 hour in seconds

# CORS Configuration
ALLOWED_ORIGINS=${ALLOWED_ORIGINS}

# Admin Configuration
ADMIN_SECRET_KEY=${ADMIN_SECRET_KEY}
ADMIN_EMAIL=${ADMIN_EMAIL}
