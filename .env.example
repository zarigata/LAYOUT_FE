# Environment Variables Configuration

# API Configuration
NEXT_PUBLIC_API_URL=https://api.edudroid.com
NEXT_PUBLIC_APP_URL=https://edudroid.com

# Authentication
NEXTAUTH_URL=https://edudroid.com
NEXTAUTH_SECRET=your-nextauth-secret-key-here
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=86400 # 24 hours in seconds

# AI Service Configuration
NEXT_PUBLIC_AI_SERVICE_ENABLED=true
AI_SERVICE_URL=https://api.openai.com/v1
AI_SERVICE_API_KEY=your-openai-api-key-here
# For Ollama integration
OLLAMA_API_URL=http://localhost:11434/api
OLLAMA_MODEL=llama3.2

# Database Configuration (for API routes)
DATABASE_URL=postgresql://username:password@localhost:5432/edudroid

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-here
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id-here

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_TUTOR=true
NEXT_PUBLIC_ENABLE_AI_CLASS_GENERATOR=true

# Cache Control
NEXT_PUBLIC_CACHE_MAX_AGE=3600 # 1 hour in seconds

# CORS Configuration
ALLOWED_ORIGINS=https://edudroid.com,https://www.edudroid.com

# Admin Configuration
ADMIN_SECRET_KEY=your-admin-secret-key-here
ADMIN_EMAIL=admin@edudroid.com
